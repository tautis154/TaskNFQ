{% extends 'base.html.twig' %}

{% block title %}Hello DisplayBoardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <h2> To see the display board enter your Registration Code </h2>
    <div class="example-wrapper">
        {{ form_start(form) }}
        {{ form_widget(form.registrationCode, {'attr':
            {'class': 'search-term', 'placeholder': 'Registration code'}}
        ) }}

        {{ form_widget(form.search, {'attr':
            {'class': 'search-button', 'label': 'Search'}}
        ) }}
        {{ form_end(form) }}


    </div>
{% endblock %}

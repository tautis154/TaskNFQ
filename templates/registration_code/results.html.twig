{% extends 'base.html.twig' %}

{% block title %}Hello RegistrationCodeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">

        <h2>Dear {{ customerName }} </h2>
        {% if remainingTime != '0' %}
        <h2>You have {{ remainingTime }} till your appointment</h2>

            {% else %}
            <h2>The doctor should appoint you soon</h2>
        {% endif %}
        {{ form_start(form) }}
        {{ form_end(form) }}

    </div>
{% endblock %}
